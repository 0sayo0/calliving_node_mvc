extends ./layout/app

block content

    section(class="py-5")
      h2(class="text-neutral-700 text-center text-4xl font-extrabold pt-10")= page

      if properties.length
        div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-10")
          each property in properties
            include ./templates/card
      
      else
        p(class="font-bold text-center text-neutral-700 text-sm py-10") No hay resultados

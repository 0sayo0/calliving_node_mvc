extends ../layout/index

block content
  .py-10
    div(class="flex flex-col md:flex-row justify-center items-center md:gap-4")
      img(src="/img/calliving-removebg-black.png" class="w-[60px] opacity-75" alt="Calliving logo")
      h1.text-4xl.my-10.font-extrabold.text-center.text-teal-500 Calliving
        span.font-normal.text-neutral-600  Inmuebles
    h2.text-center.text-2xl.font-extrabold.text-neutral-600= page

    if errors
      div(class="max-w-md mx-auto my-10")
        each error in errors
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form.space-y-5(method="POST" action="/auth/login")
          input(type="hidden" name="_csrf" value=csrfToken)
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu Email
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="nombre@email.com" type="email" name="email")
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Tu Contraseña
            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ejemplo123" type="password" name="password")
          
          div.flex.items-center.justify-between
            a.text-neutral-400(href="/auth/sign-up") ¿No estas registrado? Crear cuenta
            a.text-neutral-400(href="/auth/forgot-password") Olvide mi password

          input(class="w-full font-bold text-neutral-100 py-3 bg-teal-600 cursor-pointer rounded-md hover:bg-teal-700 hover:transition hover:-translate-y-1 duration-200 hover:shadow-md hover:shadow-rose-500" type="submit" value="Iniciar sesión")
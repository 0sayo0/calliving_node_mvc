extends ../layout/admin

block styles
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
  meta(name="csrf-token" content= csrfToken)

block content
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center.text-teal-500 Calliving
      span.font-normal.text-neutral-600  Inmuebles
    h2.text-center.text-2xl.font-extrabold.text-neutral-600= page

    div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
      form(id="image" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/properties/add-image/${property.id}`)
        input(type="hidden" name="_csrf" value= csrfToken)

      button(id="publish" class="mt-5 w-full py-3 bg-teal-600 hover:bg-teal-700 rounded text-white font-bold uppercase cursor-pointer" type="button") Publicar propiedad

block scripts
  script(src="/js/addImage.js")
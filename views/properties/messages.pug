extends ../layout/admin

block content
  h2(class="text-2xl font-extrabold text-neutral-700 text-center my-10")=page

  a(href="/my-properties" class="rounded py-2 px-10 bg-teal-600 hover:bg-teal-700 hover:-translate-y-1 transition-all hover:shadow-md hover:shadow-rose-400 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Volver

  div(class="mx-auto max-w-4xl bg-white shadow-lg shadow-rose-400 rounded-md p-2 mb-10")

    if messages.length
      ul
        each message in messages 
          li(class="border-neutral-200 border-b p-5 pb-8 m-2 space-y-3")
            p(class="font-bold text-rose-500") Nombre: 
              span(class="font-normal text-neutral-700")= message.User.name
            
            p(class="font-bold text-rose-500") Email: 
              span(class="font-normal text-neutral-700")= message.User.email
            
            p(class="font-bold text-teal-500") Mensaje: 
              span(class="font-semibold text-neutral-700")= message.message

            p(class="font-bold text-neutral-700") Enviado: 
              span(class="font-normal")= formatDate(message.createdAt)

    else
      p(class="text-center text-neutral-600 p-5") No hay mensajes